<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_40dp">
    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:background="#ffffff"
        app:contentView="@+id/Calendar_RecyclerView_CalendarRecord_Content"
        app:rightMenuView="@+id/Calendar_RecyclerView_CalendarRecord_right">
        <RelativeLayout
            android:id="@+id/Calendar_RecyclerView_CalendarRecord_Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Calendar_RecyclerView_CalendarRecord_Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/back" />
            <TextView
                android:id="@+id/Calendar_RecyclerView_CalendarRecord_Title"
                android:layout_toRightOf="@+id/Calendar_RecyclerView_CalendarRecord_Icon"
                android:layout_toLeftOf="@+id/Calendar_RecyclerView_CalendarRecord_Price"
                android:gravity="center|left"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/C2b2b2b"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/Calendar_RecyclerView_CalendarRecord_Price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/C2b2b2b"
                android:padding="5dp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/Calendar_RecyclerView_CalendarRecord_right"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff0000"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="删除" />
        </LinearLayout>
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
</RelativeLayout>
